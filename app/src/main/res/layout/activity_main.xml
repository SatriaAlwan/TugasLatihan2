<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/Layout_atas"
        android:layout_width="370dp"
        android:layout_height="220dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:background="#1C2D8C">

        <ImageView
            android:id="@+id/image_hololive"
            android:layout_width="200dp"
            android:layout_height="170dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="82dp"
            android:src="@drawable/fanbase_hololive"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Fanbase Hololive"
            android:layout_below="@id/image_hololive"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Layout_bawah"
        android:layout_width="370dp"
        android:layout_height="440dp"
        android:layout_below="@id/Layout_atas"
        android:layout_alignParentRight="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="17dp"
        android:background="#3BB143">

        <EditText
            android:id="@+id/nama"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="22dp"
            android:layout_marginRight="27dp"
            android:hint="Nama"
            android:inputType="text"
            android:textColor="@color/black" />
        <EditText
            android:id="@+id/password"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/nama"
            android:layout_marginRight="27dp"
            android:layout_alignParentRight="true"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/repeat_password"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/password"
            android:layout_alignParentRight="true"
            android:layout_marginRight="27dp"
            android:hint="Repeat Password"
            android:inputType="textPassword"
            android:textColor="@color/black" />

        <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/repeat_password"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18dp"
            android:layout_marginRight="119dp"
            android:text="DAFTAR"
            app:backgroundTint="#8F9779"
            android:textColor="@color/black"/>
    </RelativeLayout>
</RelativeLayout>